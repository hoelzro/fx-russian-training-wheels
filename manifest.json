{
  "manifest_version": 2,
  "name": "Russian Training Wheels",
  "version": "1.0",
  "author": "Rob Hoelz",
  "homepage_url": "https://github.com/hoelzro/fx-russian-training-wheels",

  "description": "An experimental extension to help me with Russian",

  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "css": [
              "tippy.css"
          ],
          "js": [
              "tippy.min.js",
              "Snowball.min.js",
              "content_script.js"
          ]
      }
  ],
  "background": {
      "scripts": ["background.js"]
  },
  "permissions": [
      "storage"
  ]
}
